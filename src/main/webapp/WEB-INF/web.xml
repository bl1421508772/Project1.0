<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

    <welcome-file-list>
    	<welcome-file>/pages/admin/login.jsp</welcome-file>
    </welcome-file-list>
    
	<filter>
		<filter-name>EncodFilter</filter-name>
		<filter-class>com.wisco.filter.EncodFilter</filter-class>
	</filter>
	
<filter>
<filter-name>EncodingFilter</filter-name>
<filter-class>com.wisco.filter.EncodingFilter</filter-class>
</filter>
	<context-param>
		<param-name>encode</param-name>
		<param-value>utf-8</param-value>
	</context-param>
	
	<!--配置applicationcontext  -->
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
  <servlet>
  <!-- 配置核心控制器 -->
  	<servlet-name>DispatcherServlet</servlet-name>
  	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  	<!-- 配置访问springmvc的路径 -->
  	<init-param>
  		<param-name>contextConfigLocation</param-name>
  		<param-value>classpath:springmvc.xml</param-value>
  	</init-param>
  	<load-on-startup>1</load-on-startup>
  	
  </servlet>
  <!-- 对外拦截路径 -->
    <filter-mapping>
<filter-name>EncodingFilter</filter-name>
<url-pattern>/*</url-pattern>
</filter-mapping>
  
  <filter-mapping>
  	<filter-name>EncodFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  	
  	
  	
  	
  </filter-mapping>
  <!-- 配置对外路径 -->
	<servlet-mapping>
		<servlet-name>DispatcherServlet</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	<error-page>  
	    <error-code>403</error-code>  
	    <location>/pages/error/403.jsp</location>  
	</error-page>  
	<error-page>  
	    <error-code>404</error-code>  
	    <location>/pages/error/404.jsp</location>  
	</error-page>  
	<error-page>  
	    <error-code>500</error-code>  
	    <location>/pages/error/500.jsp</location>  
	</error-page>  
</web-app>